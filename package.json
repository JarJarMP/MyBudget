  "dependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-plugin-transform-react-jsx": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0"
  },
  "babel": {
    "options": {
      "plugins": [
        "transform-react-jsx"
      ],
      "presets": [
        "es2015",
        "react"
      ]
    },
    "jsx": {
      "files": [
        {
          "expand": true,
          "cwd": "path/react/jsx",
          "src": [
            "*.jsx"
          ],
          "dest": "path/react/",
          "ext": ".js"
        }
      ]
    }
  }
}
